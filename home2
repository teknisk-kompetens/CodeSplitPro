    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Segment Navigation Functionality
            const segmentButtons = document.querySelectorAll('.segment-button');
            const segmentContents = document.querySelectorAll('.segment-content');
            
            segmentButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const segmentType = this.getAttribute('data-segment');
                    
                    // Deactivate all segments
                    segmentButtons.forEach(b => b.classList.remove('active'));
                    segmentContents.forEach(c => c.classList.remove('active'));
                    
                    // Activate clicked segment
                    this.classList.add('active');
                    document.getElementById(`${segmentType}-content`).classList.add('active');
                    
                    // Scroll to top of content
                    window.scrollTo({
                        top: document.querySelector('.segment-nav').offsetTop - 20,
                        behavior: 'smooth'
                    });
                });
            });
            
            // Handle related segment buttons
            const relatedButtons = document.querySelectorAll('.related-segment-buttons .segment-button');
            
            relatedButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const segmentType = this.getAttribute('data-segment');
                    
                    // Find the main nav button for this segment and trigger click
                    document.querySelector(`.segment-nav .segment-button[data-segment="${segmentType}"]`).click();
                });
            });
        });
    </script>
